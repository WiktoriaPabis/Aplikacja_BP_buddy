<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".EditMeasurementFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp">

        <EditText
            android:id="@+id/editSystolic"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_box"
            android:hint="@string/cisnienie_skurczowe"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="170dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            />

        <EditText
            android:id="@+id/editDiastolic"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_box"
            android:hint="@string/cisnienie_rozkurczowe"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            />

        <EditText
            android:id="@+id/editPulse"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_box"
            android:hint="@string/tetno"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            />

        <EditText
            android:id="@+id/editMood"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_box"
            android:hint="@string/samopoczucie"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            />

        <EditText
            android:id="@+id/editData"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_box"
            android:hint="@string/data_i_godzina"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/confirmChangesButton"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/in"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_box"
                android:text="@string/potwierdz"
                />

            <Button
                android:id="@+id/cancelButton"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/in"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_box"
                android:text="@string/anuluj"
                />
        </LinearLayout>

        <Button
            android:id="@+id/deleteButton"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/in"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_box"
            android:text="@string/usun_pomiar"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
