<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/entry_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/edittext_box"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/buzki1"
                android:layout_marginEnd="10dp">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/cisnienie_SKR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ciśnienie skurczowe: "
                    android:fontFamily="@font/in"
                    android:textSize="16sp"
                    android:textColor="@color/StatsSKR"
                    android:textStyle="normal">

                </TextView>

                <TextView
                    android:id="@+id/cisnienie_ROZ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ciśnienie rozkurczowe: "
                    android:fontFamily="@font/in"
                    android:textSize="16sp"
                    android:textColor="@color/StatsROZ"
                    android:textStyle="normal">

                </TextView>

                <TextView
                    android:id="@+id/tetno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tętno: "
                    android:fontFamily="@font/in"
                    android:textSize="16sp"
                    android:textColor="@color/StatsTETNO"
                    android:textStyle="normal">

                </TextView>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>